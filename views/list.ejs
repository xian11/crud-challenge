  <body>

    <%- include('nav.html') %>

    <div class="container mt-5">
    <h3 class="text-center mb-4">게시글 리스트</h3>
      <ul class="list-group">
        <% for (var i = 0; i < posts.length; i++){ %>
        <li class="list-group-item">
          <p>번호 : <%= posts[i]._id  %> </p>
          <a href="/detail/<%= posts[i]._id %>">제목 : <%= posts[i].제목 %></a href="/detail/id">
          <p>내용 : <%= posts[i].내용 %></p>
          <button class="delete btn btn-danger " style="float: right;" data-id="<%= posts[i]._id %>">삭제</button>
        </li>
        <% } %>
      </ul>
    </div>
    
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>
    
    <script>

      $('.delete').click(function(e){
        var post_num = e.target.dataset.id;
        var point = $(this);

        $.ajax({
          method: 'DELETE',
          url: '/delete',
          data: {_id : post_num}
        }).done(function(result){
          console.log('삭제성공');
          point.parent('li').fadeOut();

        }).fail(function(xhr, textStatus, errorThrown){
          console.log(xhr, textStatus, errorThrown);
        });

      })

    </script>

  </body>  
</body>

