  <body>

    <%- include('nav.html') %>

    <div class="container mt-5">
    <h3 class="text-center mb-4">게시글 리스트</h3>
    <div class="container input-group mb-2">
      <input class="form-control" id="search-input" >
      <button class="input-group-append btn btn-danger" id="search">검색</button>
    </div>
      <ul class="list-group">
        <% for (var i = 0; i < posts.length; i++){ %>
        <li class="list-group-item">
          <p>번호 : <%= posts[i]._id  %> </p>
          <a href="/detail/<%= posts[i]._id %>">제목 : <%= posts[i].제목 %></a>
          <!-- <p>내용 : <%= posts[i].내용 %></p> -->
          <!-- <button class="delete btn btn-danger " style="float: right;" data-id="<%= posts[i]._id %>">삭제</button> -->
          <button
          class="delete btn btn-outline-danger"
          style="float: right"
          data-id="<%= posts[i]._id %>"
        >
          삭제
        </button>
        </li>
        <% } %>
      </ul>
    </div> <button class="input-group-append btn btn-danger" onclick="location.href='/write'">글쓰기</button>

  </body>  

  </script>

